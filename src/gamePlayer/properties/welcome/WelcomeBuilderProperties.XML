<?xml version ="1.0" encoding ="UTF-8"?>

<WelcomeBuilderProperties>

	<!--window width and height -->
	<GuiSize>
		<element>900</element>
		<element>600</element>
	</GuiSize>

	<ContainerWidths>
		<element>1</element> <!-- Top -->
		<element>0</element> <!-- Left -->
		<element>0</element> <!-- Right -->
		<element>1</element> <!-- Center -->
		<element>0</element> <!-- Bottom -->
	</ContainerWidths>

	<ContainerHeights>
		<element>0.2</element> <!-- Top -->
		<element>0</element> <!-- Left -->
		<element>0</element> <!-- Right -->
		<element>0.8</element> <!-- Center -->
		<element>0</element> <!-- Bottom -->
	</ContainerHeights>

	<BackgroundImage>
		<element>gamePlayer/playerImages/castle.jpg</element>
	</BackgroundImage>

	<!-- specifies properties path to be passed to the text generator object 
		used by the guibuilder -->
	<TextGeneratorPropertiesPath>
		<element>./src/gamePlayer/properties/TextGeneratorProperties.XML</element>
	</TextGeneratorPropertiesPath>

	<GuiElementPropertiesPath>
		<element>./src/gamePlayer/properties/welcome/</element>
	</GuiElementPropertiesPath>

	<GuiStyleSheet>
		<element>/gamePlayer/styleSheets/welcomescreen_theme.css</element>
	</GuiStyleSheet>

</WelcomeBuilderProperties>